extends layout/main/main

block variables
    - var pageTitle = "Изменить данные"

block content
    .profile__container
        a(href="./profile.pug").profile__goBack
            img(src="/static/images/go-back-icon.svg" alt="")
        .profile__data
            .profile__data__photo
                .profile__changePhoto
                    .profile__changePhoto__overlay
                        span Загрузить
                    img(src="/static/images/change-photo-icon.svg" alt="")
            .profile__data__ownerName
                h3 Harun

                form(action="/")#form__changeData
                    .form__changeData__item.profile__data__row
                        label(for="email") Почта
                        input(type="email" name="email" class="change__data__field" id="email" required value="aliyevhrn@yandex.ru")
                    .form__changeData__item.profile__data__row
                        label(for="login") Логин
                        input(type="text" name="login" class="change__data__field" id="login" required value="aliyevhrn")
                    .form__changeData__item.profile__data__row
                        label(for="first_name") Имя
                        input(type="text" name="first_name" class="change__data__field" id="first_name" required value="Harun")
                    .form__changeData__item.profile__data__row
                        label(for="second_name") Фамилия
                        input(type="text" name="second_name" class="change__data__field" id="second_name" required value="Aliyev")
                    .form__changeData__item.profile__data__row
                        label(for="display_name") Имя в чате
                        input(type="text" name="display_name" class="change__data__field" id="display_name" required value="Harun")

                    .form__changeData__item.profile__data__row
                        label(for="phone") Телефон
                        input(type="phone" name="phone" class="change__data__field" id="phone" required value="+7 (909) 967 30 30")

                    button(type="button").btn_green.btn_saveData Сохранить
